<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>0.1.1</Version>
        <AssemblyVersion>0.1.1</AssemblyVersion>
        <PackageVersion>0.1.2</PackageVersion>
        <Description>Task Endurer is a library that lets you easily retry asynchronous tasks based on a given policy.</Description>
        <PackageProjectUrl>https://github.com/tluijken/task-endurer</PackageProjectUrl>
        <PackageIcon>icon.png</PackageIcon>
        <PackageTags>retry utility task async backoff</PackageTags>
        <PackageReleaseNotes>Added package meta data</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>TaskEndurer.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
      <None Update="icon.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

</Project>
